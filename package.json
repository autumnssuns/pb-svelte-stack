{
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "install": "cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && pocketbase serve",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\""
  }
}